    <script type="text/javascript" src="/jQuery/jquery.datepicker.extension.range.min.js"></script>        
    <script type="text/javascript" src="/jQuery/jquery.maskedinput.js"></script>
    <script type="text/javascript" src="/components/quantity-buttons/quantity-buttons.js"></script>
    <script type="text/javascript" src="/components/like-button/like-button.js"></script>
    <script type="text/javascript" src="/components/dropdown-guests/dropdown-guests.js"></script> 
    <script type="text/javascript" src="/components/datepicker/datepicker.js"></script>
    <script type="text/javascript" src="/components/room-reservation/room-reservation.js"></script>
