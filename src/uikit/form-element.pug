extends layouts/uikit

block variables
    - var title="Form elements"

block content
    include ../components/icon-text-list/icon-text-list
    include ../components/expandable-checkbox-list/expandable-checkbox-list
    include ../components/checkbox-buttons/checkbox-buttons
    include ../components/radio-button/radio-button
    include ../components/toggle-button/toggle-button
    include ../components/like-button/like-button
    include ../components/rate-button/rate-button
    include ../components/pagination/pagination
    include ../components/review/review
    include ../components/checkbox-buttons-rich/checkbox-buttons-rich
    include ../components/button/button
    include ../components/range-slider/range-slider
    include ../components/bullet-list/bullet-list
    include ../components/input-text-field/input-text-field
    include ../components/subscription-text-field/subscription-text-field
    include ../components/masked-text-field/masked-text-field
    include ../components/date-dropdown/date-dropdown
    include ../components/filter-date-dropdown/filter-date-dropdown
    include ../components/dropdown-guests/dropdown-guests
    include ../components/dropdown-rooms/dropdown-rooms
    
    .form-element
        .input-text-field-default.form-element
            .form-element__title
                .leftstr Text field  
                .rightstr Default
                
            +input-text-field({
                    name: "Email",
                    value: "",
                    placeholder: "Email"
                })                


        
        .input-text-field-focus.form-element
            .form-element__title
                .leftstr Text field  
                .rightstr Hover / focus
                
            +input-text-field({
                    name: "text-field",
                    value: "This is pretty awesome",
                    placeholder: ""
                })                
            
        
        
        .dropdown-guests-default.form-element
            .form-element__title
                .leftstr dropdown
                .rightstr Default
            
            +dropdown-guests



        .masked-text-field-default.form-element
            .form-element__title
                .leftstr masked-text-field
                .rightstr Default
                
            +masked-text-field({
                    id: "#date",
                    name: "",
                    value: "",
                    placeholder: "ДД.ММ.ГГГГ"
                }) 



        .date-dropdown-default.form-element
            .form-element__title
                .str date dropdown

            +date-dropdown("start")   
    


        .filter-date-dropdown-default.form-element
            .form-element__title
                .str Filter date dropdown

            +filter-date-dropdown("19 авг", "23 авг")


        .subscription-text-field-default.form-element
            .form-element__title
                .leftstr subscription text field 
                .rightstr
                
            +subscription-text-field({
                    type: "text",
                    name: "Email",
                    value: "",
                    placeholder: "Email"
                })             
            
        .dropdown-rooms-default.form-element
            .form-element__title
                .leftstr dropdown
                .rightstr Default
                
            +dropdown-rooms


        .dropdown-rooms-expanded.form-element
            .form-element__title
                .leftstr dropdown
                .rightstr Expanded
                
            +dropdown-rooms
        
        .expandable-checkbox-list-default.form-element
            .form-element__title
                .leftstr
                .rightstr                
            
            +expandable-checkbox-list("expandable checkbox list", [{}])


        .expandable-checkbox-list-expanded.form-element
            .form-element__title
                .leftstr
                .rightstr                
            
            +expandable-checkbox-list("expandable checkbox list", [{
                    description: "Завтрак",
                    name: "expandable-checkbox-list__item",
                    checked: false
                },
                {
                    description: "Письменный стол",
                    name: "expandable-checkbox-list__item",
                    checked: ""
                },
                {
                    description: "Стул для кормления",
                    name: "expandable-checkbox-list__item",
                    checked: ""
                },
                {
                    description: "Кроватка",
                    name: "expandable-checkbox-list__item",
                    checked: ""
                },
                {
                    description: "Телевизор",
                    name: "expandable-checkbox-list__item",
                    checked: false
                },
                {
                    description: "Шампунь",
                    name: "expandable-checkbox-list__item",
                    checked: false
                },
                {
                    description: "Телевизор",
                    name: "expandable-checkbox-list__item",
                    checked: false
                },
                {
                    description: "Шампунь",
                    name: "expandable-checkbox-list__item",
                    checked: false
                }])



        .icon-text-list-default.form-element
                .form-element__title
                    .leftstr icon text list
                    .rightstr
                
                +icon-text-list({
                    icon: "insert_emoticon",
                    title: "Комфорт",
                    description: "Шумопоглащающие стены"
                    })
                +icon-text-list({
                    icon: "location_city",
                    title: "Удобство",
                    description: "Окно в каждой из спален"
                    })

        
        .checkbox-buttons-default.form-element
            .form-element__title
                .leftstr checkbox buttons
                .rightstr
                            
            +checkbox-buttons([{
                    description: "Можно курить",
                    name: "expandable-checkbox-list__item",
                    checked: false
                },
                {
                    description: "Можно с питомцами",
                    name: "expandable-checkbox-list__item",
                    checked: ""
                },
                {
                    description: "Можно пригласить гостей <br>(до 10 человек)",
                    name: "expandable-checkbox-list__item",
                    checked: ""
                }])
        

        
        .radio-buttons-default.form-element
            .form-element__title
                .str radio buttons               
            .radio-buttons-default__wrap
                +radio-button("gender", "men", "checked", "Мужчина")
                +radio-button("gender", "woman", false, "Женщина")



        .toggle-buttons-default.form-element
            .form-element__title
                .leftstr toggle
                .rightstr
            .toggle-buttons-default__wrap                  
                +toggle-button("special_offer", "yes", "checked", "Получать спецпредложения")
                +toggle-button("special_offer", "no", false, "Получать спецпредложения")
        


        .like-buttons-default.form-element
            .form-element__title
                .str like buttons
            .like-buttons-default__wrap                
                +like-button({
                    name: "like",
                    count: "2"
                })
                +like-button({
                    name: "like",
                    count: "12",
                    clicked: "clicked"
                })



        .rate-buttons-default.form-element
            .form-element__title
                .str rate buttons
            .rate-buttons-default__wrap            
                +rate-button("4")
                +rate-button("5")


        .dropdown-guests-expanded-clear.form-element
            .form-element__title
                .leftstr dropdown
                .rightstr Expanded
            
            +dropdown-guests

        .dropdown-guests-expanded.form-element
            .form-element__title
                .leftstr dropdown
                .rightstr Expanded
            
            +dropdown-guests



        .checkbox-buttons_rich.form-element
            .form-element__title
                .str Rich checkbox buttons 
            
            +checkbox-buttons-rich([{
                    title: "Широкий коридор",
                    description: "Ширина коридоров в номере<br> не менее 91 см.",
                    name: " ",
                    checked: false
                },
                {   
                    title: "Помощник для инвалидов",
                    description: "На 1 этаже вас встретит специалист<br> и проводит до номера.",
                    name: " ",
                    checked: "checked"
                }])



        .range-slider-default.form-element
            .form-element__title
                .leftstr 
                .rightstr
                    
            +range-slider("range slider", "0", "20000", "&#8381")
        


        .button-default.form-element
            .form-element__title
                .leftstr Buttons
                .rightstr
            .button-default__wrap       
                +button({
                    type: "button",
                    name: "button",
                    text: "CLICK ME",
                })
                +button_framed({
                    type: "button",
                    name: "button",
                    text: "CLICK ME",
                })
                +button_unframe({
                    type: "button",
                    name: "button",
                    text: "CLICK ME",
                })
                +button_link({
                    type: "button",
                    name: "button",
                    text: "Перейти к оплате",
                })



        .pagination-default.form-element
            .form-element__title
                .leftstr Pagination
                .rightstr
            
            +pagination("15")


        .bullet-list-default.form-element
                .form-element__title
                    .leftstr bullet list
                    .rightstr
                
                +bullet-list(["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00,<br> а выезд до 12:00"])



        .review-default.form-element
                .form-element__title
                    .leftstr review
                    .rightstr
                
                +review({
                    name: "Мурад Сарафанов",
                    image_url: "/img/murad.jpg",
                    date: "5 дней назад",
                    text: "Великолепный матрас на кровати в основной спальне!\
                        А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие.\
                        Выкрикивал комплименты повару — никто не жаловался из соседей.",
                    likes: "12"
                    })




