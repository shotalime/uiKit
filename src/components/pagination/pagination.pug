mixin pagination(count)   
    table.pagination
        tr.pagination_tr
            td.pagination__item.pagination__item_active
                a.pagination__item-link(href="#") 1
            td.pagination__item
                a.pagination__item-link(href="#") 2
            td.pagination__item
                a.pagination__item-link(href="#") 3
            td.pagination__item
                a.pagination__item-link(href="#") ...
            td.pagination__item
                a.pagination__item-link(href="#") 
                    !=count
            td.pagination__item
                a.material-icons.pagination__item-link(href="#") arrow_forward
    .pagination__description 1 – 12 из 100+ вариантов аренды
        
            